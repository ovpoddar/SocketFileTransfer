<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocketFileTransfer.Pages.SettingPage"
             Title="SettingPage"
             xmlns:viewmodel="clr-namespace:SocketFileTransfer.ViewModels"
             x:DataType="viewmodel:SettingViewModel">
    <StackLayout>
        <Label Text="Port application is using to connect. i.e. make sure the device you are trying to connect has same value."></Label>
        <Editor Text="{Binding ApplicationRequiredPort}"/>

        <Label Text="Received File Location"></Label>
        <Editor Text="{Binding SavePath}" />

    </StackLayout>
</ContentPage>