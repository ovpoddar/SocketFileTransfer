<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SocketFileTransfer.Pages.SettingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:SocketFileTransfer.ViewModels"
    Title="SettingPage"
    x:DataType="viewmodel:SettingViewModel">
    <StackLayout>
        <Button Clicked="Button_Clicked" Text="back" />
        <Label Text="Port application is using to connect. i.e. make sure the device you are trying to connect has same value." />
        <Entry
            Keyboard="Numeric"
            Text="{Binding ApplicationRequiredPort}"
            Unfocused="Entry_Unfocused" />

        <Label Text="Received File Location" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="45" />
            </Grid.ColumnDefinitions>

            <Entry Text="{Binding SavePath}" Unfocused="Entry_Unfocused" />
            <Button
                x:Name="OpenFolder"
                Grid.Column="1"
                Command="{Binding OpenDialogBox}"
                Text="..." />
        </Grid>
    </StackLayout>
</ContentPage>